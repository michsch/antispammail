; http://editorconfig.org/
root = true

[*]
end_of_line = LF
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.coffee]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2
tab_width = 2

[*.js]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2
tab_width = 2
